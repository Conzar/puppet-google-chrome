FROM fedora:25

ADD . /etc/puppet/modules/google_chrome

RUN dnf install git puppet findutils hostname -y && \
    puppet module install puppetlabs-apt && \
    puppet module install darin/zypprepo && \
    puppet apply --verbose --debug /etc/puppet/modules/google_chrome/integration-tests/chrome.pp

CMD [ "ls", "-l", "/usr/bin/google-chrome" ]
